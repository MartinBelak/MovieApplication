@using MovieClient.Models;

@model  List<MovieModel>
@{
    var Movies = Model;
}

    
    
    <form class="navbar-form navbar-right" method="POST" action="/Movie/Search">
        <div class="form-group">
            <select name="SearchType" >
                <option value="Title">Title</option>
                <option value="Genre">Genre</option>
                <option value="Actors">Actors</option>
            </select>
            <input type="text" class="form-control" name="SearchQuery" placeholder="Search By Name">
        </div>
        <button type="submit" class="btn btn-default">Search!</button>
    </form>
    

@if (Movies.Count == 0)
{
    <h2>Could not retrieve any movies, try again later</h2>
}
else
{
    <h2>All Movies</h2>
    <div class="col-lg-12">
        <div class="row">
            @foreach (var movie in Movies)
            {
                <div class="col-md-3 list-group-item-success table-bordered form-inline" style="height:150px;">
                    <a href="@Url.Action("MovieDetails", "Movie", movie)">
                        <h2>@movie.Title</h2>
                    </a>
                </div>
                <div style="text-align:center">
                    <a href="@Url.Action("AddToWishlist", "Movie", Model)">Add To WishList</a>
                </div>
            }
        </div>
    </div>
}
